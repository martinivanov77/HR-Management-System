@model EmployeeCreateViewModel

@{
    ViewBag.Title = "Create Employee";
}

    <form asp-controller="employees" asp-action="create" method="post">
        <div class="form-group row">
            <label asp-for="Employee.FirstName" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-6">
                <input asp-for="Employee.FirstName" class="form-control" placeholder="First Name">
                <span asp-validation-for="Employee.FirstName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Employee.LastName" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-6">
                <input asp-for="Employee.LastName" class="form-control" placeholder="Last Name" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Employee.StartingDate" class="col-sm-2 col-form-label">Starting Date</label>
            <div class="col-sm-6">
                <input asp-for="Employee.StartingDate" class="form-control" placeholder="Starting Date" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Employee.Salary" class="col-sm-2 col-form-label">Salary</label>
            <div class="col-sm-6">
                <input asp-for="Employee.Salary" class="form-control" placeholder="Salary" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Employee.VacationDays" class="col-sm-2 col-form-label">Vacation Days</label>
            <div class="col-sm-6">
                <input asp-for="Employee.VacationDays" class="form-control" placeholder="Vaction Days" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Employee.ExperienceLevel" class="col-sm-2 col-form-label">Experience Level</label>
            <div class="col-sm-6">
                <select asp-for="Employee.ExperienceLevel" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<ExperienceLevel>()"></select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Office.City" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-6">
                <input asp-for="Office.City" class="form-control" placeholder="City" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Office" class="col-sm-2 col-form-label">Country</label>
            <div class="col-sm-6">
                <input asp-for="Office.Country" class="form-control" placeholder="Country" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Office.Street" class="col-sm-2 col-form-label">Street</label>
            <div class="col-sm-6">
                <input asp-for="Office.Street" class="form-control" placeholder="Street" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Office.StreetNumber" class="col-sm-2 col-form-label">Street Number</label>
            <div class="col-sm-6">
                <input asp-for="Office.StreetNumber" class="form-control" placeholder="Street" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Office.IsHQ" class="col-sm-2 col-form-label">Is HQ?</label>
            <div class="col-sm-6">
                <input asp-for="Office.IsHQ" class="form-control" placeholder="Street" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>