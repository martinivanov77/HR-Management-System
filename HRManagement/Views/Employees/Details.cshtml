@model EmployeeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.FirstName @Model.Employee.LastName</h1>
            </div>
            <div class="card-body text-center">

                <h4>Employee ID : @Model.Employee.Id </h4>
                <h4>First Name : @Model.Employee.FirstName</h4>
                <h4>Last Name : @Model.Employee.LastName</h4>
                <h4>Starting Date : @Model.Employee.StartingDate</h4>
                <h4>Salary : @Model.Employee.Salary</h4>
                <h4>Vacation Days : @Model.Employee.VacationDays</h4>
                <h4>Experience Level: @Model.Employee.ExperienceLevel</h4>

                @foreach (var office in Model.Employee.Offices)
                {
                    <h4>
                        Offices: @office.City , @office.Country
                    </h4>
                }


            </div>
            <div class="card-footer text-center">
                <a asp-controller="employees" asp-action="default" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}